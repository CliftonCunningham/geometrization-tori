\renewcommand{\PrintNames@a}[4]{%
    \PrintSeries{\name}
        {#1}
        {}{ and \set@othername}
        {,}{ \set@othername}
        {}{ and \set@othername}
        {#2}{#4}{#3}%
}

\def\set@name@a#1{%    \begingroup        \get@current@properties        \select@auxlanguage        \def\@tempa{yes}%        \ifx\@tempa\prop'inverted            \setbib@nameBE        \else            \textit{#1}%        \fi    \endgroup}

